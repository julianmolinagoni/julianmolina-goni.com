---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Julian Molina-Goni - Full-Stack Cloud Engineer & AWS Specialist" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    

  </head>
  <body class="bg-gray-900 text-white">
    <nav class="fixed top-0 w-full bg-gray-900/95 backdrop-blur-sm z-50 border-b border-gray-800">
      <div class="max-w-6xl mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="text-lg md:text-xl font-bold text-blue-400">Julian Molina-Goni</a>
          <div class="hidden md:flex space-x-6">
            <a href="/" class="hover:text-blue-400 transition-colors">Home</a>
            <a href="/about" class="hover:text-blue-400 transition-colors">About</a>
            <a href="/skills" class="hover:text-blue-400 transition-colors">Skills</a>
            <a href="/projects" class="hover:text-blue-400 transition-colors">Projects</a>
            <a href="/services" class="hover:text-blue-400 transition-colors">Services</a>
            <a href="/contact" class="hover:text-blue-400 transition-colors">Contact</a>
          </div>
          <button id="mobile-menu-btn" class="md:hidden text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
          <div class="flex flex-col space-y-3">
            <a href="/" class="hover:text-blue-400 transition-colors">Home</a>
            <a href="/about" class="hover:text-blue-400 transition-colors">About</a>
            <a href="/skills" class="hover:text-blue-400 transition-colors">Skills</a>
            <a href="/projects" class="hover:text-blue-400 transition-colors">Projects</a>
            <a href="/services" class="hover:text-blue-400 transition-colors">Services</a>
            <a href="/contact" class="hover:text-blue-400 transition-colors">Contact</a>
          </div>
        </div>
      </div>
    </nav>
    
    <script>
      document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
        const menu = document.getElementById('mobile-menu');
        menu?.classList.toggle('hidden');
      });
    </script>
    
    <main class="pt-20">
      <slot />
    </main>
    
    <!-- I Am Not Doing Section -->
    <div class="bg-red-900/20 border-t border-red-500/30 py-4">
      <div class="max-w-6xl mx-auto px-6 text-center">
        <p class="text-gray-300 text-sm">
          <strong class="text-red-400">I am not doing:</strong> crypto/blockchain projects, unethical automation, or hacking/surveillance tools
        </p>
      </div>
    </div>
    
    <footer class="bg-gray-800 py-8">
      <div class="max-w-6xl mx-auto px-6 text-center text-gray-400">
        <p>&copy; 2025 Julian Molina-Goni. All rights reserved.</p>
        <div class="mt-3 text-sm">
          <a href="/terms" class="hover:text-blue-400 transition-colors">Terms & Disclaimer</a>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  @import '../styles/global.css';
</style>