---
import Layout from '../layouts/Layout.astro';
import { projects } from '../data/projects';
---

<Layout title="Projects - Julian Molina-Goni">
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-6">
      <h1 class="text-4xl font-bold text-center mb-12">Featured Projects</h1>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {projects.map((project) => (
          <div class="bg-gray-800 rounded-lg p-6 hover:bg-gray-700 transition-colors">
            <div class="flex justify-between items-start mb-4">
              <h3 class="text-xl font-semibold text-blue-400">{project.title}</h3>
              {project.featured && (
                <span class="bg-blue-600 px-2 py-1 rounded text-xs font-semibold">Featured</span>
              )}
            </div>
            
            <p class="text-gray-300 mb-3 leading-relaxed">{project.description}</p>
            {project.benefit && (
              <p class="text-green-400 text-sm mb-4 font-medium italic">{project.benefit}</p>
            )}
            
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tech.map((tech) => (
                <span class="bg-gray-700 px-2 py-1 rounded text-sm text-gray-300">{tech}</span>
              ))}
            </div>
            
            <div class="flex gap-4">
              <a 
                href={project.github} 
                target="_blank" 
                rel="noopener noreferrer"
                class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded font-semibold transition-colors text-sm"
              >
                View on GitHub
              </a>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <p class="text-gray-400 mb-4">More projects coming soon as repositories are uploaded to GitHub</p>
        <a 
          href="https://github.com/julianmolinagoni" 
          target="_blank" 
          rel="noopener noreferrer"
          class="border border-blue-600 hover:bg-blue-600 px-6 py-3 rounded-lg font-semibold transition-colors"
        >
          View GitHub Profile
        </a>
      </div>
    </div>
  </section>
</Layout>